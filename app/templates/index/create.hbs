<form {{action "createTodo" model on="submit"}}>
  <div class="form-group">
    <label for="todo-name">Name</label>
    {{input type="text" class="form-control" value=model.name placeholder="Enter TODO name" id="todo-name" required="required" }}
  </div>
  <div class="form-group">
    <label for="todo-description">Description</label>
    {{input type="text" class="form-control" value=model.description id="todo-description" placeholder="Enter TODO Description" }}
  </div>
  <button type="submit" class="btn btn-primary">Create</button>
</form>
{{outlet}}